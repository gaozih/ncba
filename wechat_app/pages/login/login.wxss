.login-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 40rpx;
}

.login-btn, .phone-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.phone-bind-section {
  text-align: center;
}

.tips {
  display: block;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
} 