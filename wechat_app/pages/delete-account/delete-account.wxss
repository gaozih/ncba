.delete-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 40rpx;
}

.warning-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.warning-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0;
}

.warning-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.warning-desc text {
  display: block;
  margin-bottom: 10rpx;
}

.confirm-section {
  margin: 40rpx 0;
}

.confirm-input {
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.button-group {
  margin-top: 60rpx;
}

.delete-btn, .cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.cancel-btn {
  background: #f8f8f8;
  color: #666;
} 