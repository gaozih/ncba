.container {
  width: 100vw;
  height: 100vh;
  background: #f5f5f5;
}

.loading, .error {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text, .error text {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
}

.back-btn {
  margin-top: 40rpx;
  padding: 20rpx 60rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

web-view {
  width: 100%;
  height: 100%;
} 