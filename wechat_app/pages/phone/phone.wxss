.phone-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

.phone-input, .code-input {
  height: 88rpx;
  font-size: 28rpx;
}

.vcode-cell {
  display: flex;
  align-items: center;
}

.send-code-btn {
  min-width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  margin: 0;
  padding: 0 20rpx;
}

.button-group {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
} 